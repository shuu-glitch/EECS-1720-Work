{
  "manifest_version": 2,
  "name": "Doubtfire Horror Extension",
  "version": "1.1",
  "description": "Just your typical blocking of advertisements and trigger words (in a hopefully quirky way)! Tested on Chrome.",
  "author": "Lilian Ilodigwe",
  "web_accessible_resources": [
    "images/*.png"
  ],

  "browser_action": {
    "default_title": "Doubtfire Horror Extension",
    "default_icon": {
      "128": "images/icon128.png",
      "48": "images/icon48.png",
      "32": "images/icon32.png",
      "16": "images/icon16.png"
    }
  },

  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["popup.js"]
  }]
    
}
